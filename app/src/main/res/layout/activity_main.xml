<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="@dimen/activity_toolbar_elevation"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/main_activity_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:layout_below="@id/main_activity_toolbar"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_activity_menu_button_first"
            android:layout_height="@dimen/main_activity_menu_button_height"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/default_button_margin"
            android:text="@string/main_activity_menu_first"
            android:textSize="@dimen/main_activity_menu_text_size"
            android:textColor="@color/bezova"
            android:background="@drawable/menu_button" />

        <Button
            android:id="@+id/main_activity_menu_button_second"
            android:layout_height="@dimen/main_activity_menu_button_height"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/default_button_margin"
            android:text="@string/main_activity_menu_second"
            android:textSize="@dimen/main_activity_menu_text_size"
            android:textColor="@color/bezova"
            android:background="@drawable/menu_button" />

    </LinearLayout>

</RelativeLayout>
